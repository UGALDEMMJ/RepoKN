@model List<KN_ProyectoWeb.Models.Product>
@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="col-12">
    <div class="card overflow-hidden" style="height: 500px">

        <div class="d-flex align-items-center">
            <h5 class="card-header mb-0">Productos</h5>
            <a href="@Url.Action("AddProducts","Products")" class="btn btn-outline-primary">+ Add</a>
        </div>

        <div class="card-body ps ps--active-x ps--active-y">

            <table id="tProducts" class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>State</th>
                        <th>Imagen</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ConsecutiveProduct</td>
                            <td>@item.Name</td>
                            <td>$ @item.Price.ToString("N2")</td>
                            <td>@item.CategoryName</td>
                            <td>@(item.State ? "Active" : "Inactive")</td>
                            <td><img src="@item.ImageUrl" width="200" height="150"></td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>

<script src="~/StaticFiles/js/GetProducts.js"></script>
