﻿@model List<KN_ProyectoWeb.Models.Product>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="col-12">
    <div class="row g-4">

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-primary text-center">
                @ViewBag.Message
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@item.ImageUrl" class="card-img-top mt-3" alt="@item.Name" style="height:180px; object-fit:contain;">

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title mb-1">@item.Name</h6>
                        <p class="mb-1 text-muted">@item.CategoryName</p>
                        <p class="fw-bold mb-2">$ @item.Price.ToString("N2")</p>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <small class="text-muted">Disponibles:</small>
                            <span class="fw-semibold @(item.Quantity > 0 ? "text-success" : "text-danger")">
                                @item.Quantity
                            </span>
                        </div>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-center align-items-center mt-auto">
                                @using (Html.BeginForm("AddProductCar", "Home", FormMethod.Post, new { @id = "FormPrincipal", @class = "d-flex align-items-center" }))
                                {
                                    <input type="hidden" id="ConsecutiveProduct" name="ConsecutiveProduct" value=@item.ConsecutiveProduct>

                                    <input id="Quantity" name="Quantity"
                                           class="form-control form-control-sm text-center me-2"
                                           style="width:60px;"
                                           type="text"
                                           maxlength="2"
                                           value="1"
                                           onkeypress="soloNumerosASCII(this, event)">

                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                        <i class="fa fa-cart-plus me-1"></i> Add
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
            </div>
        }

    </div>
</div>

<script src="~/StaticFiles/js/Principal.js"></script>